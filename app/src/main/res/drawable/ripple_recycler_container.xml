<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorBg1">

        <item>
            <layer-list>
                <!-- Drop Shadow Stack -->
                <item>
                    <shape>
                        <padding android:bottom="1dp"/>

                        <solid android:color="#00CCCCCC" />

                        <corners
                            android:radius="15dp" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <padding android:bottom="1dp"/>

                        <solid android:color="@color/colorContainerShadow" />

                        <corners
                            android:radius="15dp" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <padding android:bottom="1dp"/>

                        <solid android:color="@color/colorContainerShadow" />

                        <corners
                            android:radius="15dp" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <padding android:bottom="1dp"/>

                        <solid android:color="@color/colorContainerShadow" />

                        <corners
                            android:radius="15dp" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <padding android:bottom="1dp"/>

                        <solid android:color="@color/colorContainerShadow" />

                        <corners
                            android:radius="15dp" />
                    </shape>
                </item>

                <!-- Background -->
                <item>
                    <shape>
                        <solid android:color="@color/colorContainer" />

                        <corners
                            android:radius="15dp"/>
                    </shape>
                </item>
            </layer-list>
        </item>
</ripple>